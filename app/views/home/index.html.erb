<h1>Welcome <%= current_employee.first_name %></h1>

<h2>My Tasks</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <% if task.assignee == current_employee.id %>
      	<tr>
        	<td><%= task.name %></td>
        	<td><%= task.description %></td>
        	<td><%= task.status %></td>
        	<td><%= link_to 'Show', task %></td>
        	<td><%= link_to 'Edit', edit_task_path(task) %></td>
        	<td><%= link_to 'Assign to manager', assign_task_path(task) %></td>
      	</tr>
   	  <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to "Employees", employees_path %>
<%= link_to "All Tasks", tasks_path %>